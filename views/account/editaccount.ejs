<% if (title) { %>
    <h1><%= title %></h1>
  <% } %>
  
  <%- messages() %>
  
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
  
  <form action="/account/update" method="post" id="accountUpdateForm">
    <input type="hidden" name="account_id" value="<%= account_id %>">
  
    <label for="account_firstname">First Name:</label>
    <input type="text" id="account_firstname" name="account_firstname" required minlength="2" pattern="^[A-Za-z]+$" title="Only letters, minimum of 2 characters" value="<%= account_firstname %>">
  
    <label for="account_lastname">Last Name:</label>
    <input type="text" id="account_lastname" name="account_lastname" required minlength="2" pattern="^[A-Za-z]+$" title="Only letters, minimum of 2 characters" value="<%= account_lastname %>">
  
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" required value="<%= account_email %>">
  
    <button type="submit" id="updateAccountBtn" disabled>Update Account</button>
  </form>
  
  <!-- Change Password Form -->
  <form action="/account/update-password" method="post" id="changePasswordForm">
    <input type="hidden" name="account_id" value="<%= account_id %>">
  
    <label for="account_password">New Password:</label>
    <input type="password" id="account_password" name="account_password" required minlength="8" title="Password must be at least 8 characters and include uppercase, lowercase, number, and special character.">
  
    <label for="account_password_confirm">Confirm New Password:</label>
    <input type="password" id="account_password_confirm" name="account_password_confirm" required minlength="8" title="Please confirm your new password.">
  
    <p class="form-note">By entering a new password, you will change your current password. Password must be at least 8 characters and include uppercase, lowercase, number, and special character.</p>
  
    <button type="submit" id="changePasswordBtn">Change Password</button>
  </form>
  
  <script src="/js/account-update.js"></script>
  